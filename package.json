{
  "name": "dinheirow-test",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.56.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.36",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "css-loader": "^6.7.1",
    "git-commit-msg-linter": "^4.1.3",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "node-sass": "^7.0.1",
    "sass-loader": "^13.0.0",
    "ts-jest": "^28.0.3",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/main/test/cypress"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "@/tests/(.*)": "<rootDir>/tests/$1",
      "@/(.*)": "<rootDir>/src/$1",
      "\\.scss$": "identity-obj-proxy"
    },
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
